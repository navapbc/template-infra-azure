#!/usr/bin/env bash
# Print the config name for the current account
# Do this by getting the current account and searching for a file in
# infra/accounts that matches "<account name>.<account id>.<backend type>.tfbackend".
# The config name is "<account name>.<account id>"
set -euo pipefail
current_account_id=$(./bin/current-account-id)
backend_config_file_path=$(ls -1 infra/accounts/*."${current_account_id}".*.tfbackend)
backend_config_file=$(basename "${backend_config_file_path}")
backend_config_name="${backend_config_file%.*.tfbackend}"
echo "${backend_config_name}"
